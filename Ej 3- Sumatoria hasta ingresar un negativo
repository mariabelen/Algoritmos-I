// SUMATORIA.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <conio.h>
#include <iostream>

using namespace std;
int main()
{int s, n, i;
s=0;
cout << "Ingrese el valor de n: ";
cin>> n;

	while(n>0)
	{for(i=1;i<=n;i++)
		if(n%2!=0)
		   s=s+i;
	cout<<"La suma es:  "<<s; 
	cout << "Ingrese el valor de n: ";
	 cin>> n;
    
	}
getch();
return 0;
}
